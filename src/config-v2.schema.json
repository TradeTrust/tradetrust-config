{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/TradeTrust/tradetrust-config/master/src/config-v2.schema.json",
  "type": "object",
  "required": ["network", "wallet", "forms"],
  "properties": {
    "network": {
      "type": "string",
      "enum": ["homestead", "local", "goerli", "sepolia", "matic", "maticmum","xdc","xdcapothem"]
    },
    "wallet": {
      "oneOf": [
        {
          "required": ["type", "encryptedJson"],
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["ENCRYPTED_JSON"]
            },
            "encryptedJson": {
              "type": "string"
            }
          }
        },
        {
          "required": ["type", "accessKeyId", "region", "kmsKeyId"],
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["AWS_KMS"]
            },
            "accessKeyId": {
              "type": "string"
            },
            "region": {
              "type": "string"
            },
            "kmsKeyId": {
              "type": "string"
            }
          }
        }
      ]
    },
    "forms": {
      "type": "array",
      "items": {
        "required": ["name", "type", "defaults", "schema"],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Used for document file name."
          },
          "type": {
            "type": "string",
            "enum": ["VERIFIABLE_DOCUMENT", "TRANSFERABLE_RECORD"]
          },
          "defaults": {
            "required": ["$template", "issuers", "network"],
            "type": "object",
            "properties": {
              "$template": {
                "required": ["type", "name", "url"],
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["EMBEDDED_RENDERER"]
                  },
                  "name": {
                    "type": "string",
                    "enum": [
                      "BILL_OF_LADING",
                      "CHAFTA_COO",
                      "COVERING_LETTER",
                      "INVOICE",
                      "SIMPLE_COO"
                    ]
                  },
                  "url": {
                    "type": "string",
                    "format": "uri"
                  }
                }
              },
              "issuers": {
                "type": "array",
                "items": {
                  "oneOf": [
                    {
                      "required": [
                        "name",
                        "documentStore",
                        "identityProof",
                        "revocation"
                      ],
                      "description": "Issue with document store using DNS-TXT as verification.",
                      "type": "object",
                      "properties": {
                        "documentStore": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "identityProof": {
                          "required": ["type", "location"],
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "string",
                              "enum": ["DNS-TXT"]
                            },
                            "location": {
                              "type": "string",
                              "format": "hostname"
                            }
                          }
                        },
                        "revocation": {
                          "required": ["type"],
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "string",
                              "enum": ["NONE", "REVOCATION_STORE"]
                            }
                          }
                        }
                      }
                    },
                    {
                      "required": ["name", "tokenRegistry", "identityProof"],
                      "description": "Issue with token registry using DNS-TXT as verification.",
                      "type": "object",
                      "properties": {
                        "tokenRegistry": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "identityProof": {
                          "required": ["type", "location"],
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "string",
                              "enum": ["DNS-TXT"]
                            },
                            "location": {
                              "type": "string",
                              "format": "hostname"
                            }
                          }
                        }
                      }
                    },
                    {
                      "required": ["name", "identityProof", "id", "revocation"],
                      "description": "Issue with did:ethr using DID or DNS-DID as verification.",
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "identityProof": {
                          "required": ["type", "key"],
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "string",
                              "enum": ["DNS-DID", "DID"]
                            },
                            "location": {
                              "type": "string",
                              "format": "hostname"
                            },
                            "key": {
                              "type": "string"
                            }
                          }
                        },
                        "id": {
                          "type": "string"
                        },
                        "revocation": {
                          "required": ["type"],
                          "type": "object",
                          "properties": {
                            "type": {
                              "type": "string",
                              "enum": ["NONE", "REVOCATION_STORE"]
                            },
                            "location": {
                              "type": "string",
                              "format": "hostname"
                            }
                          }
                        }
                      }
                    }
                  ]
                }
              },
              "network": {
                "type": "object",
                "properties": {
                  "chain": {
                    "type": "string",
                    "enum": ["ETH", "MATIC", "XDC"]
                  },
                  "chainId": {
                    "type": "string",
                    "enum": ["1337", "1", "137", "80001", "5", "11155111","50","51"]
                  }
                }
              }
            }
          },
          "schema": {
            "type": "object"
          },
          "uiSchema": {
            "type": "object"
          },
          "attachments": {
            "required": ["allow"],
            "type": "object",
            "properties": {
              "allow": {
                "type": "boolean"
              },
              "accept": {
                "type": "string"
              }
            }
          },
          "extension": {
            "type": "string",
            "enum": ["json", "tt", "oc"]
          },
          "fileName": {
            "type": "string"
          }
        }
      }
    },
    "documentStorage": {
      "required": ["url"],
      "type": "object",
      "properties": {
        "apiKey": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}
